{
  "name": "root",
  "private": true,
  "homepage": "http://rimbu.org",
  "author": {
    "name": "Arvid Nicolaas",
    "email": "arvid@rimbu.org",
    "url": "https://github.com/vitoke"
  },
  "license": "MIT",
  "funding": [
    {
      "type": "individual",
      "url": "https://github.com/sponsors/vitoke"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rimbu-org/rimbu.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna run clean && lerna clean --yes && yarn setup",
    "commit": "git-cz",
    "docsify": "docsify serve docs",
    "format": "yarn format:root & lerna run format --parallel",
    "format:check": "yarn format:root-check & lerna run format:check",
    "format:root": "yarn format:root-base --write",
    "format:root-base": "prettier \"*.{ts,tsx,js,json,md}\" \"{config,docs}/**/*.{ts,tsx,js,json,md}\"",
    "format:root-check": "yarn format:root-base --check",
    "lint": "lerna run lint --parallel",
    "postinstall": "husky install",
    "prerelease": "yarn typecheck && yarn test:types && yarn test && yarn test:random",
    "publish:ci": "lerna publish from-package --yes",
    "setup": "yarn && yarn bootstrap",
    "test": "lerna run test",
    "test:types": "lerna run test:types",
    "test:random": "lerna run test:random",
    "typecheck": "lerna run typecheck",
    "version:ci": "lerna version --yes --conventional-commits --create-release github --message 'chore(release): publish'",
    "version:prerelease": "yarn version:ci --conventional-prerelease"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": "eslint -c ./config/.eslintrc.json --cache",
    "*.{ts,tsx,js,json,md}--parallel": "prettier --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "docsify-cli": "^4.4.3",
    "eslint": "^7.25.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tsd": "^0.15.1",
    "tslib": "^2.2.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
