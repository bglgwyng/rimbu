{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "bundle",
          "bundle:main",
          "bundle:module",
          "bundle:types",
          "format",
          "format:check",
          "lint",
          "test",
          "typecheck",
          "test:types"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "bundle": {
      "dependsOn": ["^bundle"]
    },
    "bundle:main": {
      "dependsOn": ["^bundle:main"],
      "outputs": ["{projectRoot}/dist/main"]
    },
    "bundle:module": {
      "dependsOn": ["^bundle:module"],
      "outputs": ["{projectRoot}/dist/module"]
    },
    "bundle:types": {
      "dependsOn": ["^bundle:types"],
      "outputs": ["{projectRoot}/dist/types"]
    },
    "build:deno": {
      "outputs": ["{projectRoot}/../../deno_dist"]
    }
  }
}
